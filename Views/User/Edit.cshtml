@{
    ViewData["Title"] = "Edit User";
}
@model User
<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Edit User</h3>
        <form method="post" asp-controller="User" asp-action="Edit">
            <input type="hidden" asp-for="@Model.Id">
            <div class="mb-3">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" asp-for="@Model.FirstName" id="firstName" name="FirstName" class="form-control" placeholder="Enter your first name" required>
            </div>
            <div class="mb-3">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" asp-for="@Model.LastName" id="lastName" name="LastName" class="form-control" placeholder="Enter your last name" required>
            </div>
            <div class="mb-3">
                <label for="code" class="form-label">Code</label>
                <input type="text" asp-for="@Model.Code" id="code" name="Code" class="form-control" placeholder="Enter your code" required>
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select asp-for="@Model.Role" id="role" name="Role" class="form-select" required>
                    <option value="1">Student</option>
                    <option value="2">Teacher</option>
                    <option value="3">Staff</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" asp-for="@Model.Email" id="email" name="Email" class="form-control" placeholder="Enter your email" required>
            </div>
            <button class="btn btn-primary w-100">Edit</button>
            <div class="text-danger text-center mt-2">@ViewBag.Message</div>
        </form>
    </div>
</div>
