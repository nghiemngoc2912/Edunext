@{
    ViewData["Title"] = "Account Information";
}
@model Edunext.Models.User
@{
    if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }
}
<div class="container">
    <h1>Account Information</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            FirstName:
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName
        </dd>
        <dt class = "col-sm-2">
           LastName
        </dt>
        <dd class = "col-sm-10">
            @Model.LastName
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @(Model.Role == 1 ? "Student" :
                Model.Role == 2 ? "Teacher" :
                Model.Role == 3 ? "Staff" : "Admin")
        </dd>
    </dl>
</div>
<!--Update Account and Change Password-->
<a asp-controller="User"  asp-action="EditNorm" class="btn btn-primary">Update Account</a>
<a asp-controller="User" asp-action="ChangePassword" class="btn btn-secondary">Change Password</a>

