@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Reset Password</h2>
                <p class="text-center text-muted">
                    Enter your email so we can send you a reset password link!
                </p>

                <form method="post" action="PreResetPassword">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email"
                               placeholder="Enter your email" value="@TempData["Email"]" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Send Reset Link</button>
                    </div>
                </form>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="mt-3 text-center text-danger fw-bold">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>
