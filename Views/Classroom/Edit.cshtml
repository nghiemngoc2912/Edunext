@{
    ViewData["Title"] = "Update Class";
}
@model Classroom
<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Update Class</h3>
        <form method="post" asp-controller="Classroom" asp-action="Edit">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <div class="mb-3">
                <label for="code" class="form-label">Name</label>
                <input type="text" asp-for="@Model.Name" id="code" name="Name" class="form-control" placeholder="Enter name" required>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Teacher</label>
                <select name="teacherId">
                    @foreach(var t in ViewBag.Teachers)
                    {
                        <option value="@t.Id" selected="@(t.Id==Model.TeacherId)">@t.Code</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Course</label>
                <select name="courseId">
                    @foreach (var t in ViewBag.Courses)
                    {
                        <option value="@t.Id" selected="@(t.Id==Model.CourseId)">@t.Code</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Semester</label>
                <select name="semesterId">
                    @foreach (var t in ViewBag.Semesters)
                    {
                        <option value="@t.Id" selected="@(t.Id==Model.SemesterId)">@t.Name</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary w-100">Update</button>
            <div class="text-danger text-center mt-2">@ViewBag.Message</div>
        </form>
    </div>
</div>
