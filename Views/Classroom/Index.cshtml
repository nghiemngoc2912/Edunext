@{
    ViewData["Title"] = "Classrooms";
}
@model IEnumerable<Classroom>

@{
    if (Model.Count() == 0)
    {
        <div class="alert alert-info text-center">
            No classrooms found.
        </div>
    }
    else
    {
        <h2 class="text-center">Classes List</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Course Code</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var classroom in Model)
                {
                    <tr>
                        <td>@classroom.Name</td>
                        <td>@classroom.Course.Code</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
}
<form method="post" asp-action="Create" asp-controller="ClassEnrollment">
    <!--Enroll class by input class name-->
    <div class="form-group">
        <label for="ClassName">Class Name</label>
        <input type="text" class="form-control" value="@ViewBag.ClassName" id="ClassName" name="ClassName" placeholder="Enter class name">
    </div>
    <button type="submit" class="btn btn-primary">Enroll</button>
</form>
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Message"]
    </div>
}
