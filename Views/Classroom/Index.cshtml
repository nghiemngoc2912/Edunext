@{
    ViewData["Title"] = "Classrooms";
}
@model IEnumerable<Classroom>

@{
    if (Model.Count() == 0)
    {
        <div class="alert alert-info text-center">
            No classrooms found.
        </div>
    }
    else
    {
        <h2 class="text-center">Classes List</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Course Code</th>
                    <th>Teacher</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var classroom in Model)
                {
                    <tr>
                        <td>@classroom.Name</td>
                        <td>@classroom.Course.Code</td>
                        <td>@classroom.Teacher.LastName @classroom.Teacher.FirstName</td>
                        <td>@classroom.Semester.StartDate</td>
                        <td>@classroom.Semester.EndDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
