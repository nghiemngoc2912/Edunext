@{
    ViewData["Title"] = "Create Semester";
}
@model Semester
<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Create Semester</h3>
        <form method="post" asp-controller="Semester" asp-action="Create">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" asp-for="@Model.Name" id="name" name="Name" class="form-control" placeholder="Enter name" required>
            </div>
            <div class="mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" asp-for="@Model.StartDate" id="startDate" name="StartDate" class="form-control" placeholder="Enter start date">
            </div>
            <div class="mb-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" asp-for="@Model.EndDate" id="endDate" name="EndDate" class="form-control" placeholder="Enter end date">
            </div>
            <button class="btn btn-primary w-100">Create</button>
            <div class="text-danger text-center mt-2">@ViewBag.Message</div>
        </form>
    </div>
</div>
